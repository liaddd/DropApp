<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drop_review_list_item_card_view"
        app:cardElevation="@dimen/margin_4dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:padding="@dimen/margin_16dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:textSize="@dimen/text_size16sp"
                android:textColor="@android:color/black"
                android:id="@+id/drop_review_list_item_full_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="@dimen/text_size16sp"
                android:textColor="@android:color/black"
                android:id="@+id/drop_review_list_item_phone_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="@dimen/text_size16sp"
                android:textColor="@android:color/black"
                android:id="@+id/drop_review_list_item_address_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="@dimen/text_size16sp"
                android:textColor="@android:color/black"
                android:id="@+id/drop_review_list_item_bags_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>

